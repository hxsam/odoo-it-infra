    <field name="name">it_infrastructure.database_backup_policy.select</field>
    <field name="model">it_infrastructure.database_backup_policy</field>
    <field name="arch" type="xml">
        <search string="database_backup_policy" version="7.0">
            <group string="By Attribute">
                <field name="name" string="name"/>
                <field name="cron_id" string="Cron"/>
            </group>
            <group string="By Object">
            </group>
        </search>
    </field>
</record>

<!-- FORMVIEW -->
<record id="view_infrastructure_database_backup_policy_form" model="ir.ui.view">
    <field name="name">it_infrastructure.database_backup_policy.form</field>
    <field name="model">it_infrastructure.database_backup_policy</field>
    <field name="arch" type="xml">
        <form string="database_backup_policy" version="7.0">
            <header>
            </header>
            <sheet string="database_backup_policy">
             <group>
                <field name="name"/>
                <field name="cron_id"/>
             </group>
            </sheet>
        </form>
    </field>
</record>

<!-- TREEVIEW -->
<record id="view_infrastructure_database_backup_policy_tree" model="ir.ui.view">
    <field name="name">it_infrastructure.database_backup_policy.tree</field>
    <field name="model">it_infrastructure.database_backup_policy</field>
    <field name="arch" type="xml">
        <tree string="database_backup_policy">
            <field name="name"/>
            <field name="cron_id"/>
        </tree>
    </field>
</record>

<record id="action_infrastructure_database_backup_policy_database_backup_policies" model="ir.actions.act_window">
    <field name="name">Backup Policies</field>
    <field name="res_model">it_infrastructure.database_backup_policy</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_infrastructure_database_backup_policy_tree"/>
    <field name="search_view_id" ref="view_infrastructure_database_backup_policy_filter"/>
    <field name="domain">[]</field>
</record>

<menuitem
    name="Backup Policies"
    id="menu_database_backup_policies"
    sequence="100"
    action="action_infrastructure_database_backup_policy_database_backup_policies"
    parent="menu_databases_conf"
    groups="group_manager"
    />

</data>
