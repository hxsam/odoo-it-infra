<?xml version="1.0" encoding="utf-8"?>
<!-- it_infrastructure.repository -->
<openerp>
<data>

<!-- SEARCH VIEW -->
<record id="view_infrastructure_repository_filter" model="ir.ui.view">
    <field name="name">it_infrastructure.repository.select</field>
    <field name="model">it_infrastructure.repository</field>
    <field name="arch" type="xml">
        <search string="repository" version="7.0">
            <group string="By Attribute">
                <field name="name" string="Name"/>
                <field name="directory" string="Directory"/>
                <field name="type" string="Type"/>
                <field name="pip_packages" string="PIP Packages"/>
            </group>
            <group string="By object">
            </group>
        </search>
    </field>
</record>

<!-- FORMVIEW -->
<record id="view_infrastructure_repository_form" model="ir.ui.view">
    <field name="name">it_infrastructure.repository.form</field>
    <field name="model">it_infrastructure.repository</field>
    <field name="arch" type="xml">
        <form string="repository" version="7.0">
            <header>
            </header>
            <sheet string="repository">
             <group>
                <field name="name"/>
                <field name="directory"/>
                <field name="type"/>
                <field name="addons_subdirectory"/>
                <field name="url"/>
                <field name="pip_packages"/>
                <field name="is_server"/>
                <field name="install_server_command"
                    attrs="{'required':[('is_server','=',True)],'invisible':[('is_server','!=',True)]}"
                    />
            <field name="branch_ids"
                    widget="many2many_tags"
                    />
             </group>
            </sheet>

        </form>
    </field>
</record>

<!-- TREEVIEW -->
<record id="view_infrastructure_repository_tree" model="ir.ui.view">
    <field name="name">it_infrastructure.repository.tree</field>
    <field name="model">it_infrastructure.repository</field>
    <field name="arch" type="xml">
        <tree string="repository">
            <field name="sequence"
                    widget="handle"
                />
            <field name="name"/>
            <field name="directory"/>
            <field name="type"/>
            <field name="url"/>
            <field name="pip_packages"/>
            <field name="is_server"/>
        </tree>
    </field>
</record>

<record id="action_it_infrastructure_repository_repositories" model="ir.actions.act_window">
    <field name="name">Repositories</field>
    <field name="res_model">it_infrastructure.repository</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_infrastructure_repository_tree"/>
    <field name="search_view_id" ref="view_infrastructure_repository_filter"/>
    <field name="domain">[]</field>
</record>

<menuitem
    name="Repositories"
    id="menu_repositories"
    sequence="100"
    action="action_it_infrastructure_repository_repositories"
    parent="menu_repositories_conf"
    groups="group_manager"
    />

</data>
</openerp>
