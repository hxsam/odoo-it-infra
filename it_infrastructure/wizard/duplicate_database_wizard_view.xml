<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<record id="infrastructure_duplicate_database_wizard_view" model="ir.ui.view">
     <field name="name">Duplicate db Wizard</field>
     <field name="model">it_infrastructure.duplicate_db.wizard</field>
     <field name="arch" type="xml">
        <form string="Duplicate Database">
            <group>
                <field name="new_database_name"/>
                <field name="change_user"/>
                <field name="server_id" attrs="{'invisible':[('change_user','=',False)],'invisible':[('change_user','=',True)]}" />
                <field name="instance_id" attrs="{'invisible':[('change_user','=',False)],'required':[('change_user','=',True)]}" domain="[('server_id','=',server_id)]"/>
            </group>
            <footer>
                <button name="duplicate_db" string="Duplicate" type="object" class="oe_highlight"/>
                or
                <button string="Cancel" class="oe_link" special="cancel"/>
            </footer>
        </form>
     </field>
 </record>

<record id="action_it_infrastructure_duplicate_database_wizard" model="ir.actions.act_window">
     <field name="name">Duplicate db Wizard</field>
     <field name="res_model">it_infrastructure.duplicate_db.wizard</field>
     <field name="type">ir.actions.act_window</field>
     <field name="view_type">form</field>
     <field name="view_mode">tree,form</field>
     <field name="view_id" ref="infrastructure_duplicate_database_wizard_view"/>
     <field name="context">{}</field>
     <field name="target">new</field>
</record>

</data>
</openerp>
